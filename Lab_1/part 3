#include "mbed.h"

// Blinking rate in milliseconds
#define BLINKING_RATE1    200ms //LED blink rate
#define BLINKING_RATE2    500ms //
#define BLINKING_RATE3    100ms //

void blink(DigitalOut LED) { 
    LED=1;//turn LED on
    ThisThread::sleep_for(BLINKING_RATE1);
    LED=0;//turn LED off
    ThisThread::sleep_for(BLINKING_RATE1);
    //digital out is used as a viarable
}//to acess the digital outs when needed

int main()
{
    // Initialise the digital pin LED1 as an output
    DigitalOut led1(LED1);
    DigitalOut led2(LED2);
    DigitalOut led3(LED3);
    
    DigitalOut LED_arr[] = {led1,led2,led3}; //LED array to access later to turn on LEDs
   
    while (true) {
        for (int i=0;i<=2;){ //led 1 to 3
            if (i<2){
                blink(LED_arr[i]); //using i to move along array and access 
                i++;
            }
            else if (i>=2){ //led 3 to 1
                for (int j=0;j<=1;j++) {
                    blink(LED_arr[i]);
                    i--; //i is set back to 0 (led 1) and loop starts again
                }
            }
        }   
    }
}       
