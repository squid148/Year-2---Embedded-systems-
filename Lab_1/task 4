
#include "mbed.h"
//commit check
// Blinking rate in milliseconds
#define BLINKING_RATE1    200ms //LED blink rate
#define BLINKING_RATE2    500ms //
#define BLINKING_RATE3    100ms //
void phase1(DigitalOut& led1,DigitalOut& led2, DigitalOut& led3) {//LED flashes function
for (int i=0;i<5;i++){
        led1=led2=led3=1;
        ThisThread::sleep_for(BLINKING_RATE1); //200ms puase
        led1=led2=led3=0;
        ThisThread::sleep_for(BLINKING_RATE1);
    }
}

void phase2(DigitalOut& led1) {//keep LED 1 on function
    led1=1;// keep led 1 on
}

int main()
{
    // Initialise the digital pin LED1 as an output
    DigitalOut led1(LED1);
    DigitalOut led2(LED2);
    DigitalOut led3(LED3);
    

    
   phase1(led1,led2,led3);
   phase2(led1);
}
